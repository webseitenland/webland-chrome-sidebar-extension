{
  "manifest_version": 3,
  "name": "Webland Sidebar",
  "version": "1.0.0",
  "description": "Eine moderne Sidebar-Extension mit n√ºtzlichen Features",
  "author": "Webseitenland",
  "homepage_url": "https://webseitenland.de",
  "icons": {
    "16": "assets/icons/logo.png",
    "48": "assets/icons/logo.png",
    "128": "assets/icons/logo.png"
  },
  "action": {
    "default_title": "Webland Sidebar",
    "default_icon": {
      "16": "assets/icons/logo.png",
      "48": "assets/icons/logo.png",
      "128": "assets/icons/logo.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 